<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

	<style name="HorizontalBreakline">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">@dimen/breakline_thickness</item>
		<item name="android:background">@color/breakline</item>
		<item name="android:layout_marginTop">@dimen/breakline_margin</item>
		<item name="android:layout_marginBottom">@dimen/breakline_margin</item>
		<item name="layout_constraintBottom_toBottomOf">parent</item>
	</style>

</resources>
